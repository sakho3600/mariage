{# Here we are in a <div class="row"> #}

{% extends "MariageGuestBundle::layout.html.twig" %}


{% block title %}
    <h1 class="page-header text-center"> Ajouter un invité</h1>
{% endblock %}

{% block table_guests %}

<div class="well">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'control-label col-xs-12 col-sm-2'}} ) }}
            {{ form_widget(form.firstname, {'attr': {'class': 'col-xs-12 col-sm-6'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.family, 'Famille', {'label_attr': {'class': 'control-label col-xs-12 col-sm-2'}} ) }}
            {{ form_widget(form.family, {'attr': {'class': 'col-xs-12 col-sm-6'}} ) }}
        </div>

        <div class="form-group">
            {{ form_label(form.confirm, 'Confirmé', {'label_attr': {'class': 'control-label col-xs-12 col-sm-2'}} ) }}
            {{ form_widget(form.confirm, {'attr': {'class': 'col-xs-12 col-sm-6'}} ) }}
        </div>

        <div class="form-group">
            <div class="col-xs-12 col-sm-offset-2">
                <button type="submit" name="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok-sign"></span> Enregister </button>
            </div>
        </div>

        {{ form_rest(form) }}
    {{ form_end(form) }}
</div>

{% endblock %}
